<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/book.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let author of prods) { %>
                    <article class="card book-item">
                        <header class="card__header">
                            <h1 class="book__title"><%= author.name %></h1>
                        </header>
                  
                        <div class="card__content">
                            <h2 class="book__author"><%= author.name %></h2>
                            <p class="book__description"><%=author.email %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/author/edit-author/<%=author._id%>?edit=true" class="btn">Edit</a>
                            <form action="/author/delete-author" method="POST">
                                <input type="hidden" name="authorId" value="<%= author._id %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                        <!-- <div class="card__actions">
                            <a href="/authors/<%= author._id%>" class="btn">Details</a>
                            <form action="/cart" method="post">
                                <button class="btn" type="submit">Add to Cart</button>
                                <input type="hidden" name="authorId" value="<%= author._id %>">
                            </form>
                        </div> -->
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No authors Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>