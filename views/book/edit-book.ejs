<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/book.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="book-form" action="/book/<% if (editing) { %>edit-book<% } else { %>add-book<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= book.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= book.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="author">author</label>
                <input type="text" name="author" id="author" value="<% if (editing) { %><%= book.author %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= book.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= book._id %>" name="bookId">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Update book<% } else { %>Add book<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>